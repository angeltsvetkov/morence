rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /apartments/{apartmentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /apartments/{apartmentId}/bookings/{bookingId} {
      allow read: if true;
      allow create, delete: if request.auth != null;
      // Allow authenticated users to update any fields
      allow update: if request.auth != null;
      // Allow guests to mark survey as completed (only this field)
      allow update: if request.auth == null && 
                    request.resource.data.diff(resource.data).affectedKeys().hasOnly(['surveyCompleted']) &&
                    request.resource.data.surveyCompleted == true;
    }

    match /apartments/{apartmentId}/surveyQuestions/{questionId} {
      allow read: if true;
      allow write, create, delete: if request.auth != null;
    }

    match /apartments/{apartmentId}/bookings/{bookingId}/surveyResponses/{responseId} {
      allow read: if request.auth != null; // Only authenticated users (admins) can read responses
      allow create: if true; // Allow public survey submission (token validation is done in app logic)
      allow update, delete: if request.auth != null; // Only authenticated users can modify responses
    }

    match /apartments/{apartmentId}/testimonials/{testimonialId} {
      allow read: if true; // Public can read testimonials for the carousel
      allow create, update, delete: if request.auth != null; // Only authenticated users (admins) can modify testimonials
    }

    match /places/{placeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Amenities collection - readable by everyone, writable by authenticated users
    match /amenities/{amenityId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Duplicate rule removed - already defined above
  }
}