rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /apartments/{apartmentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /apartments/{apartmentId}/bookings/{bookingId} {
      allow read: if true;
      allow write, delete: if request.auth != null;
    }

    match /apartments/{apartmentId}/surveyQuestions/{questionId} {
      allow read: if true;
      allow write, create, delete: if request.auth != null;
    }

    match /apartments/{apartmentId}/bookings/{bookingId}/surveyResponses/{responseId} {
      allow read: if request.auth != null; // Only authenticated users (admins) can read responses
      allow create: if true; // Allow public survey submission (token validation is done in app logic)
      allow update, delete: if request.auth != null; // Only authenticated users can modify responses
    }

    match /places/{placeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Amenities collection - readable by everyone, writable by authenticated users
    match /amenities/{amenityId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Apartments collection - readable by everyone, writable by authenticated users  
    match /apartments/{apartmentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}